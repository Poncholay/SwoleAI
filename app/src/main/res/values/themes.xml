<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SwoleAi" parent="ParentTheme" />

    <!-- Base application theme. -->
    <style name="ParentTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/mainDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLight</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorTertiary">@color/textTertiary</item>
        <item name="android:textColor">@color/textPrimary</item>

        <!--  Status bar-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Default Components -->
        <item name="android:colorBackground">@color/backgroundDefault</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <!-- Splash -->
    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/main</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SwoleAi</item>
    </style>

    <!-- Default Components -->
    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/backgroundCardView</item>
        <item name="cardElevation">@dimen/elevationCardView</item>
        <item name="cardCornerRadius">@dimen/cornerRadiusCardView</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/textParagraphRegular</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextInputLayoutAppearanceRound" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/textParagraphPrimary</item>
        <item name="boxBackgroundColor">@color/backgroundEditText</item>
        <item name="hintTextColor">@color/textSecondary</item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="counterTextColor">@color/textTertiary</item>
        <item name="boxStrokeColor">@color/textTertiary</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <!-- Components -->
    <style name="LoaderStyle" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorSize">@dimen/sizeLoader</item>
        <item name="trackThickness">@dimen/thicknessLoader</item>
    </style>

    <style name="ButtonMainStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textSize">@dimen/textParagraphRegular</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">@dimen/heightButton</item>
    </style>

    <style name="ButtonSecondaryStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/textParagraphRegular</item>
        <item name="android:background">@drawable/background_button_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">@dimen/heightButton</item>
    </style>
</resources>